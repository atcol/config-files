# List available recipes
default:
    @just --list

# Run the project
run *ARGS:
    cargo run -- {{ARGS}}

# Build the project
build:
    cargo build

# Build for release
release:
    cargo build --release

# Run tests
test:
    cargo test

# Run tests with output
test-verbose:
    cargo test -- --nocapture

# Check the project
check:
    cargo check

# Format code
fmt:
    cargo fmt

# Check formatting
fmt-check:
    cargo fmt -- --check

# Run clippy
lint:
    cargo clippy -- -D warnings

# Run all checks (format, lint, test)
ci: fmt-check lint test

# Clean build artifacts
clean:
    cargo clean

# Update dependencies
update:
    cargo update

# Generate documentation
doc:
    cargo doc --open
